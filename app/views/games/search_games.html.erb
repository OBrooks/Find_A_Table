<%=form_tag search_games_path do%>
    <input class = "search full-width" id = "searchbar" name = "query" placeholder = "Rechercher un jeu, appuyez sur entrée" type ="text", autocomplete = "off">
<%end%>
<button onclick="location.href='/advanced_search_games'"><i aria-hidden="true"></i>Recherche avancée</button>

<% @games.each do |game| %>
    <div class="container">
      <div class = "row row-game-sticker">
          <div class="col-lg-3 col-game-pic">
              <% if game.game_picture.attachment != nil %>
                  <%= image_tag game.game_picture %>
              <% else %>
                  <img src="<%= game.image_url%>" class="games_image">
              <% end %>
          </div>
          <div class = "col-lg-9">
              <div class = "row">
                  <h4><b><a href = "<%=game_path(game.id)%>"><%= game.title %></a></b></h4>
              </div>
              <ul>
              <div class = "row">
                  <div class = "col">
                      <%if game.min_players == game.max_players%>
                          <li><b>Jusqu'à <%=game.min_players%> joueurs</b></li>
                      <%else%>
                          <li><b>De <%=game.min_players%> à <%=game.max_players%> joueurs</b></li>
                      <%end%>
                  </div>
                  <div class = "col">
                      <li><b>Durée de jeu : <%=game.time%></b></li>
                  </div>
                  <div class = "col">
                      <li><b>Categorie  : <%= Category.find(game.category_id).category_name%></b></li>
                  </div>
              </div>
              </ul>
          </div>
      </div>
    </div>
  <% end %>