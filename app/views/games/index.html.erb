<h1><b><a href = "/games/new">Créer un nouveau jeu dans la banque de donnée</a></b></h1>
<% @games.each do |game| %>
    <div class = "row">
        <div class="col-lg-3">
            <% if game.game_picture.attachment != nil %>
                <%= image_tag game.game_picture%>
            <% else %>
                <img src="<%= game.image_url%>" class="games_image" width="300px">
            <% end %>
        </div>
        <div class = "col-lg-9">
            <div class = "row">
                <h4><b><a href = "<%=game_path(game.id)%>"><%= game.title %></a></b></h4>
            </div>
            <ul>
            <div class = "row">
                <div class = "col">
                    <%if game.min_players == game.max_players%>
                        <li><b>Jusqu'à <%=game.min_players%> joueurs</b></li>
                    <%else%> 
                        <li><b>De <%=game.min_players%> à <%=game.max_players%> joueurs</b></li>
                    <%end%>
                </div>
                <div class = "col">
                    <li><b>Durée de jeu : <%=game.time%></b></li>
                </div>
                <div class = "col">
                    <li><b>Categorie  : <%= game.category%></b></li>
                </div>
            </div>
            </ul>
        
        </div>

    </div>        
<% end %>

