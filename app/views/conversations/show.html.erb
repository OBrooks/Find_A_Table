<% if @conversations_senders != nil || @conversations_recipients != nil %>
<div class="row" id="conversation-user-to-user">
    <div class="col-lg-3">
        <ul id="conversations-list">
            <% if @conversations_senders %>
                <% @conversations_senders.each do |conversation| %>
                    <%= render 'conversations/conversation_user', conversation: conversation %>
                    <br>
                <% end %>
            <% end %>
            <% if @conversations_recipients %>
                <% @conversations_recipients.each do |conversation| %>
                    <%= render 'conversations/conversation_user', conversation: conversation %>
                    <br>
                <% end %>
            <% end %>
        </ul>
    </div>

    <div class="col-lg-9" id="conversation-messages-user-to-user">

    </div>
</div>
<% end %>

<% if @chatroom_users != nil %>
<% @chatroom_users.each do |chatroom_user| %>
<div class="row d-flex justify-content-center">
<button class="btn-sidebar" onclick="location.href='/chatrooms/<%=chatroom_user.chatroom.id%>'">
        <div class="d-flex justify-content-between align-items-center">
            <i class="fa fa-comments fa-fw" aria-hidden="true"></i>
Rejoindre le chat de la session du
<%=I18n.localize(chatroom_user.chatroom.session.date, :format=> "%A %e %B %Y", :locale => 'fr')%> chez
<%=chatroom_user.chatroom.session.host.nickname%>
        </div>
    </button>
</div>
<% end %>
<% end %>

