<li>
<div class="messenger messenger-default" data-conversation-id="<%= conversation.id %>">
        
<div class="messenger-heading">
            <%= link_to conversation.opposed_user(user).nickname, '', class: 'toggle-window' %>
            <%= link_to "x", close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
        </div>

        <div class="panel-body messenger-body" style="display: none;">
            <div class="messages-list" id="messagelist">
                <ul>
                    <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
                </ul>
            </div>
            <form class="new_message chatboxinput">
                <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
                <input name="user_id" type="hidden" value="<%= user.id %>">
                <textarea name="body" class="chatboxtextarea"></textarea>
                <input type="submit" class="btn btn-success" value="Send">
            </form>
        </div>
    </div>
</li>
