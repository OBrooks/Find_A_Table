<div class="container container-signup">


<h2 class="m-4 signup-title">Créer un nouveau compte</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col">
  <%= devise_error_messages! %>
    </div>
    <div class="col">
    </div>
    <div class="col">
    </div>
  </div>

  <div class="row mt-1">
    <div class="col"> <!-- EMAIL -->
      <div class="field mt-1">
        <span><%= f.label "Email" %></span>
        <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control" %>
      </div>
    </div>
    <div class="col"> <!-- NICKNAME -->
      <div class="field mt-1">
        <span><%= f.label "Pseudo" %></span>
        <%= f.text_field :nickname, autofocus: true, placeholder: "Votre pseudo", class: "form-control" %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>

  <div class="row mt-1">
    <div class="col"> <!-- PASSWORD -->
      <div class="field mt-1">
        <span><%= f.label "Mot de passe" %>
        <% if @minimum_password_length %>
        <em>( <%= @minimum_password_length %> characters minimum )</em>
        <% end %></span>
        <%= f.password_field :password, placeholder: "Nouveau mot de passe", class: "form-control" %>
      </div>
    </div>
    <div class="col"> <!-- PASSWORD CONFIRMATION -->
      <div class="field mt-1">
        <span><%= f.label "Confirmer mot de passe" %></span>
        <%= f.password_field :password_confirmation, placeholder: "Nouveau mot de passe", class: "form-control" %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>

  <div class="row mt-5">
    <div class="col"> <!-- FIRST NAME -->
      <div class="field mt-1">
        <span><%= f.label "Prénom" %></span>
        <%= f.text_field :first_name, autofocus: true, placeholder: "Votre prénom", class: "form-control" %>
      </div>
    </div>
    <div class="col"> <!-- LAST NAME -->
      <div class="field mt-1">
        <span><%= f.label "Nom" %></span>
        <%= f.text_field :last_name, autofocus: true, placeholder: "Votre nom", class: "form-control" %>
      </div>
    </div>
    <div class="col"> <!-- GENDER -->
      <div class="field mt-1">
        <span><%= f.label "Genre" %></span>
        <%= f.text_field :gender, autofocus: true, placeholder: "Votre genre: masculin, féminin, autre", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row mt-1">
    <div class="col"> <!-- TOWN -->
      <div class="field mt-1">
        <span><%= f.label "Ville" %></span>
        <%= f.text_field :town, autofocus: true, placeholder: "Votre ville", class: "form-control" %>
      </div>
    </div>
    <div class="col"> <!-- ADRESS -->
      <div class="field mt-1">
        <span><%= f.label "Adresse" %></span>
        <%= f.text_field :adress, autofocus: true, placeholder: "Votre adresse", class: "form-control" %>
      </div>
    </div>
    <div class="col"><!-- DATE OF BIRTH -->
      <div class="field mt-1">
          <span><%= f.label "Date de naissance" %></span>
          <p><%= f.date_field :birthdate %></p>
      </div>
    </div>
  </div>


  <div class="actions mt-5 mb-2">
   <h6><%= f.submit "Inscription", class: "btn-signup-confirm"%></h6>
  </div>
  <% end %>

  <div class="row mt-5">
    <%= render "devise/shared/links" %>
  </div>

</div>
