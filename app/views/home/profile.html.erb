<div class="container-profile">

  <h2 class="m-3"><%= current_user.nickname.capitalize %></h2>

  <div class="row">
    <div class="col">
    </div>
    <div class="col">
    </div>
    <div class="col">
    </div>
    <div class="col">
      <div class="edit-profile-pic">
        <% if current_user.profile_picture.attachment != nil %>
          <%= image_tag current_user.profile_picture %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>Description</h3>
      <span><%=current_user.description %></span>
    </div>
    <div class="col">
      <h3>Votre nom :</h3>
      <span><%=current_user.first_name %> <%=current_user.last_name %></span>
    </div>
    <div class="col">
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
    </div>
    <div class="col">
      <h3>Votre adresse :</h3>
      <span><%=current_user.adress %>, <%=current_user.town %></span>
    </div>
    <div class="col">
    </div>
