
  <strong>La session :</strong>
  <%= @chatroom.session.game.title %>
  <br>
  <%= @chatroom.session.date %>
  <br>
  <% @chatroom.users.each do |user| %>
  <%= user.nickname %>
  <br>
  <% end %>
</p>


<div data-behavior='usersmessages' data-chatroom-id='<%= @chatroom.id %>'>
<% @chatroom.usersmessages.each do |message| %>
  <div><strong><%= message.user.nickname %>: </strong><%= message.body %></div>
<% end %>
</div>

<%= form_for [@chatroom, Usersmessage.new], remote: true do |f| %>
<%= f.text_area :body, rows: 1, class: "form-control chatmessages", autofocus: true %>
<%= f.submit "Envoyer" %>
<% end %>


