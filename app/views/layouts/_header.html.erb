<div class="row row-header">
  <div class="col d-flex justify-content-start">
    <div class="header-logo">
      <img src="http://image.noelshack.com/fichiers/2018/50/1/1544461716-logohorizontal.png" class="logo-picture">
    </div>
  </div>
  <div class="col d-flex justify-content-end">
      <% if user_signed_in? == false %>
        <div class="header-buttons">
          <button class="modal-inscription btn-header">Inscription</button>
          <button class="modal-connection btn-header">Connexion</button>
        </div>
      <% end %>
      <% if user_signed_in? %>
      <div class="messages">
        <%= link_to "<i class='fa fa-comments fa-3x' aria-hidden='true'></i>".html_safe, messages_path %>
      </div>
      <div class="header-avatar">
        <div class="dropdown" id="header-dropdown">
          <% if current_user.profile_picture.attachment != nil %>
            <%= image_tag current_user.profile_picture, id:"avatar", onclick:"headerDropdown()" %>
          <% else %>
            <img onclick="headerDropdown()" src="https://i.kym-cdn.com/photos/images/newsfeed/000/885/429/ba9.gif" alt="avatar" id="avatar">
          <% end %>
          <div class="dropdown-content" id="header-dropdown-content">
            <p> <%= link_to "Votre Profil", profile_path%> </p>
            <p> <%= link_to "Editer vos infos", edit_user_registration_path%> </p>
            <p> <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %> <p>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>


