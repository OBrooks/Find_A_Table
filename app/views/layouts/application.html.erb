<!DOCTYPE html>
<html>

<head>
    <title>Table Finder</title>
    <link rel="icon" href="/favicon.ico" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>
<div id="background-container"></div>
<%# <div id="background-container" class="background-dice"></div> %>

<body>
<div id="load_screen"><img src="/img/loading-dice.gif"></div>
  <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
  <% end %>

  <header>
    <%= render "layouts/header"%>
  </header>

  <div class="container-fluid">

      <div class="row row-content">
        <div class="col-lg-2"></div>
        <div class="position-fixed col-sidebar">
          <%= render "layouts/sidebar" %>
        </div>
          <div class="col-lg-10">
              <% flash.each do |key, value| %>
                <bold><center><%= content_tag :div, value, class: "flash #{key}", class: "flash_background"%></center></bold>
              <% end %>
              <%=render "layouts/modalconnection"%>
              <%=render "layouts/modalinscription"%>
              <div class= "col-main-content">
                <%= yield %>
              </div>
          </div>
      </div>

    </div>

    <!-- <footer>
      <%= render "layouts/footer" %>
    </footer> -->

        <audio id="chatAudio"><source src="/sounds/notification.mp3" type="audio/mpeg"></audio>
    </body>

    </html>
