<div class="container">
  <% if user_signed_in? %>
  <div class="row text-center">
    <h3 class="sidebar-hello">Bonjour,<br> <span class="username"><%= current_user.nickname.capitalize %> !</span></h3>
  </div>
    <% if current_user.webmaster? %>
      <div class="row d-flex justify-content-center">
        <%= link_to "<i class='fa fa-cog fa-fw' aria-hidden='true'></i><span style='float: right; margin-right: 6px;'>WebMaster Dashboard</span>".html_safe, webmaster_path, class: "btn-admin" %>
      </div>
    <% elsif current_user.admin? %>
      <div class='row d-flex justify-content-center'>
        <%= link_to "<i class='fa fa-cog fa-fw' aria-hidden='true'></i><span style='float: right; margin-right: 6px;'>Admin Dashboard</span>".html_safe, admin_path, class: "btn-admin" %>
      </div>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
    <div class="row d-flex justify-content-center">
      <button class="btn-sidebar" onclick="location.href='/mysessions'">
        <div class="d-flex justify-content-between align-items-center">
          <i class="fa fa-home fa-fw" aria-hidden="true"></i>
          Mes sessions
        </div>
      </button>
    </div>

    <div class="row d-flex justify-content-center">
      <button class="btn-sidebar" onclick="location.href='/favoris'">
        <div class="d-flex justify-content-between align-items-center">
          <i class="fa fa-heart favred fa-fw" aria-hidden="true"></i>
          Mes favoris
        </div>
      </button>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center">
    <button class="btn-sidebar">
      <div class="d-flex justify-content-between align-items-center">
        <i class="fa fa-search fa-fw" aria-hidden="true"></i>
        Chercher une session
      </div>
    </button>
  </div>

  <div class="row d-flex justify-content-center">
    <button class="btn-sidebar" onclick="location.href='/gamesession'">
      <div class="d-flex justify-content-between align-items-center">
        <i class="fa fa-cube fa-fw" aria-hidden="true"></i>
        Liste des sessions
      </div>
    </button>
  </div>

  <div class="row d-flex justify-content-center">
    <button class="btn-sidebar" onclick="location.href='/games'">
      <div class="d-flex justify-content-between align-items-center">
        <i class="fa fa-bookmark-o fa-fw" aria-hidden="true"></i>
        Liste des jeux
      </div>
    </button>
  </div>

  <% if user_signed_in? %>
    <div class="row d-flex justify-content-center">
      <button class="btn-sidebar">
        <div class="d-flex justify-content-between align-items-center">
          <i class="fa fa-calendar fa-fw" aria-hidden="true"></i>
          Calendrier
        </div>
      </button>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center">
    <button class="btn-sidebar">
      <div class="d-flex justify-content-between align-items-center">
        <i class="fa fa-wrench fa-fw" aria-hidden="true"></i>
        Outils
      </div>
    </button>
  </div>

</div>

